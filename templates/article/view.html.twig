{% extends 'base.html.twig' %}

{% block title %}Article View!{% endblock %}

{% block body %}
<style>
    .post-thumb{
        width:50%;
    }
</style>

<div>
{% if article %}
        <div class="text-center">
            <h3 class="mt-3 text-center">{{ article.getTitle() }}</h3>
            <div class="col-6 offset-3">
                <img class="post-thumb" src="{{asset('uploads/article/'~ article.getPostImage())}}" alt="">
            </div>

            <div>
                <small class="post-date"><strong>{{ article.getUserId() }}</strong></small>
                <p>{{ article.getBody() }}</p>
            </div>
            {% if article.getId() == LoginUser %}
            <div>
                <p><a class="btn btn-danger" href="/Symfony/blog/public/article/delete/{{article.getId()}}">Delete</a></p>
            </div>
            {% endif %}

        </div>
        {% if app.user%}
            <div>
                <h5>Comments</h5>
            </div>
        {% endif %}
{% endif %}
</div>
{% endblock %}
