{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}
{% block body %}
<style>
.post-thumb{
    width:100%;
}
</style>

<div>
    <h1 class="mt-3 text-center">Articles</h1>
{% if articles %}
    {% for article in articles %}
        <div class="row mb-3">

            <div class="col-md-3">

                <img class="post-thumb" src="{{asset('uploads/article/'~ article.getPostImage())}}" alt="">

            </div>

            <div class="col-md-9">

                <h4>{{ article.getTitle() }}</h4>

                <small class="post-date"><strong>{{ article.getUserId() }}</strong></small>

                <p>{{ article.getBody() }}</p>

                <p><a class="btn btn-info" href="article/view/{{article.getId()}}">Read More</a></p>

            </div>

        </div>
    {% endfor %}
{% else %}
    <h4> There are no article to show </h4>
{% endif %}
</div>
{% endblock %}
