{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}
{% block body %}
<style>
.post-thumb{
    width:100%;
}
.pagination span:hover {
    background: #f4f4f4;
}
.pagination span {
    display: block;
    background: #97bbbd;
    padding:1%;
    margin:5px;
    border: 1px solid #f4f4f4;
}
.current{
    background: #f4f4f4 !important;
    border: 1px solid $f4f4ff;
}
</style>

<div>
    <h1 class="mt-3 text-center">Articles</h1>
{% if articles %}
    {% for article in articles %}
        <div class="row mb-3">

            <div class="col-md-3">

                <img class="post-thumb" src="{{asset('uploads/article/'~ article.getPostImage())}}" alt="">

            </div>

            <div class="col-md-9">

                <h4>{{ article.getTitle() }}</h4>

                <small class="post-date">By: <strong>{{ article.getUserId().getUserName() }}</strong></small>

                <p>{{ article.getBody() }}</p>

                <p><a class="btn btn-info" href="/Symfony/blog/public/article/view/{{article.getId()}}">Read More</a></p>

            </div>

        </div>
    {% endfor %}
    <div class="pagination-link">
        {{ knp_pagination_render(articles) }}
    </div>
{% else %}
    <h4> There are no article to show </h4>
{% endif %}
</div>
{% endblock %}
