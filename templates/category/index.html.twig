{% extends 'base.html.twig' %}

{% block title %}Article Categories{% endblock %}

{% block body %}

<div>
    <h1 class="mt-5 text-center">Article Categories</h1>
    {% if articles %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Created by </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for artice in articles %}
                <tr>
                    <td>{{ artice.getName() }}</td>
                    <td>{{ artice.getUserId()}}</td>
                    <td>
                        <a href="" class="btn btn-warning">View</a>
                        {% if artice.getUserId() == LoginUser %}
                            <a href="category/delete/{{ artice.getId()}}" class="btn btn-danger">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h4>There are no categories to display</h4>
    {% endif %}
</div>
{% endblock %}
